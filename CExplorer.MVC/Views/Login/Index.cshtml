@model CExplorer.MVC.Models.LoginVm

<div>
    <h1 style="text-align:center;">Login</h1>

    <div asp-validation-summary="ModelOnly"></div>
    <form asp-action="Login" class="form-horizontal">
        <div class="form-group form-inline text-center">
            <label asp-for="EmailAdress" class="control-label"></label>
            <div class="col-sm-12">
                <input asp-for="EmailAdress" class="form-control" />
                <span asp-validation-for="EmailAdress"></span>
            </div>
        </div>
        <div class="form-group form-inline text-center">
            <label asp-for="Password" class="control-label"></label>
            <div class="col-sm-12">
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group form-inline text-center">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-lg">Login</button>
            </div>
        </div>
    </form>
</div>
